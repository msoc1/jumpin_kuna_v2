<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameFragments.GameLostFragment"
    android:background="@drawable/bg"
    android:id="@+id/game_lost">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Your Score:"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/your_score_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="0"
        android:gravity="center"
        android:textSize="84sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/share_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        style="@style/FontFamilyButtons"
        android:text="Share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/new_game_from_lost"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="new game"
        style="@style/FontFamilyButtons"
        app:layout_constraintBottom_toTopOf="@+id/share_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/your_score_textview" />

    <Button
        android:id="@+id/goto_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="home"
        style="@style/FontFamilyButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="0:00"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/your_score_textview"
        app:layout_constraintStart_toStartOf="@+id/your_score_textview"
        app:layout_constraintTop_toBottomOf="@+id/your_score_textview" />
</androidx.constraintlayout.widget.ConstraintLayout>